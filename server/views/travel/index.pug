extends ../layout/index

block content
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destiny_${travel.image}_ln.jpg`, alt="About Image")
            .col-md-7
                h1=travel.title
                p
                    i.fa.fa-calendar 
                    | Departure Date: #{travel.departure_date} - Return Date: #{travel.return_date}
                p
                    i.fa.fa-usd
                    |  #{travel.price}
                p
                    i.fa.fa-users
                    |  #{travel.available} Available Seats
                p=travel.description
                        